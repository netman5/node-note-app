<html lang="en">

<%- include('./partials/head.ejs') %>

    <body class="home">
        <%- include ('./partials/nav.ejs') %>
            <div class="content">
                <p>Welcome to our favorite note app</p>

                <% if (notes.length> 0) { %>
                    <% notes.forEach(note=> { %>
                        <ul class="notes">
                            <li>
                                <a href="/notes/<%= note._id %> ">

                                    <h2>
                                        <%= note.title %>
                                    </h2>
                                </a>

                                <span>
                                    Author: <%= note.author %>
                                </span>
                                <p>
                                    <%= note.body %>
                                </p>


                            </li>
                        </ul>
                        <% }) %>

                            <% } else { %>
                                <p>You don't have any notes to display</p>
                                <% } %>
            </div>


    </body>
    <%- include ('./partials/footer.ejs') %>

</html>